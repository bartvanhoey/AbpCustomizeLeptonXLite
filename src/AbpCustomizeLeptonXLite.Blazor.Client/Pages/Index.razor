@page "/"
@inherits AbpCustomizeLeptonXLiteComponentBase

<div class="starting-content pe-5">
    @if (!CurrentUser.IsAuthenticated)
    {
        <h3>@L["Welcome"]</h3>
        <p class="lead text-muted mb-2">@L["LongWelcomeMessage"]</p>
        <a href="/authentication/login" class="btn btn-primary mb-4"><i
                class="fa-solid fa-right-to-bracket me-1"></i><span>@L["Login"]</span></a>
    }

    <h4>Getting Started</h4>
    <p class="text-muted mb-2">Learn how to create and run
        a
        new web application using the application startup
        template.</p>
    <a href="https://abp.io/docs/latest/getting-started" class="btn btn-primary btn-brand mb-2"
       target="_blank">Getting
        Started</a>


</div>
    